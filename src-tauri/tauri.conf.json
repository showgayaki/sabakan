{
    "productName": "Sabakan",
    "$schema": "https://schema.tauri.app/config/2",
    "version": "1.1.0",
    "identifier": "world.kanke.sabakan",
    "build": {
        "beforeDevCommand": "pnpm dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "サバカン！",
                "width": 400,
                "minWidth": 152,
                "height": 470,
                "minHeight": 470
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all"
    }
}
